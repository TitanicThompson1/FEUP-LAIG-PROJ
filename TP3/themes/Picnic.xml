    <model>
        <transformations>
            <translation x="4.7" y="1" z="3.2" />
            <scale sx="0.25" sy="0.25" sz="0.25"/>
        </transformations>
        <gameboard material="whiteMaterial" texture="null"/>
        <tile material="blackMaterial" texture="null"/>
        <pieces>
            <type1 material="blackMaterial" texture="blackPiece"/>
            <type2 material="whiteMaterial" texture="whitePiece"/>
            <type3 material="whiteMaterial" texture="greenPiece"/>
        </pieces>
    </model>


    <nodes>
        <node id="sceneRoot">
            <material id="whiteMaterial"/>
            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>
            <transformations>
            </transformations>
            <descendants>
                <noderef id="room"/>
                <noderef id="carpet"/>
                <noderef id="table"/>

            </descendants>
        </node>
        <node id="room">
            <material id="null"/>
            <texture id="null">
                <amplification afs="1" aft="1" />
            </texture>
            <transformations>
            </transformations>
            <descendants>
                <noderef id="rightWall"/>
                <noderef id="leftWall"/>
                <noderef id="wall"/>
                <noderef id="floor"/>
                <noderef id="ceiling"/>
                <noderef id="frontWall"/>
            </descendants>
        </node>

        <node id="rightWall">
            <material id="whiteMaterial"/>
            <texture id="rightWall">
                <amplification afs="8" aft="6" />
